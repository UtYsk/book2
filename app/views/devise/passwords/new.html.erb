<div class="container">

<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <input type="submit" name="commit" value="Send me reset password instructions" class="btn btn-danger" data-disable-with="Send me reset password instructions">
  </div>
<% end %>
<style>
	div.field{
		margin-bottom: 10px;
	}
	div.actions{
		margin-bottom: 10px;
	}
	.sign_in{
		color: #666666;
	}
	.sign_up{
		color: #666666;
	}
</style>
<a class="sign_in" href="/users/sign_in">Log in</a>
<br>
<a class="sign_up" href="/users/sign_up">Sign up</a>
<br>
</div>