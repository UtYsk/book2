<%= render partial: "books/display", locals: { new_book: @new_book } %>

  <div class="col-xs-9">
	<h2>Users</h2>
		<table class="table">
			<thead>
				<tr>
					<th>image</th>
					<th>name</th>
					<th colspan="3"></th>
				</tr>
			</thead>
			<tbody>
				<% @users.each do |user| %>
					<tr>
						<td>
							<p><%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.png", size: '50x50', class: "img-rounded pull-left profile-thumb" %>
							</p>
						</td>
						<td>
							<p><%= user.name %></p>
					    </td>
					    <td>
					    	<%= link_to "show", user_path(user) %>
					    </td>
					</tr>
				<% end %>
			</tbody>
		</table>
  </div>

</div>
</div>

