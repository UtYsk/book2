<%= render 'books/display', new_book: @new_book %>

    	<div class="col-xs-9">
    		<h2>Books</h2>
    		<table class="table table-hover table-inverse">
    			<thead>
    				<tr>
    					<th></th>
    					<th>Title</th>
    					<th>Opinion</th>
    					<th colspan="3"></th>
    				</tr>
    			</thead>
    			<tbody>
                    <% @books.each do |book| %>
                     <tr>
                     <td><%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, fallback: "no_image.png", size:'50x50', class: "img-rounded pull-left profile-thumb" %></td>
                     <td><%= link_to book_path (book) do %><%= book.title %><% end %></td>
                     <td><%= book.body %></td>
                     </tr>
                    <% end %>

                </tbody>
    		</table>
</div>




