<div class="body-wrap">
	<div class="container">
		<h2 class="form-header-title">User info</h2>
			<div class="form-body">
				<div class="row">
					<div class="col-xs-3">
											<%= form_for(@user) do |f| %>
											 <div class="form-group has-icon">
											 	<label class="control-label sr-only" for="inputEmail">Name</label>Name
											 	<%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"Name"%>
											 </div>
											 <div class="form-group has-icon">
    											<label class="control-label sr-only" for="inputEmail">Image</label>Image
    											<%= f.attachment_field :profile_image, placeholder: "image", class: "user-edit-form" %>
											 </div>
											 <div class="form-group has-icon">
											 	<label class="control-label sr-only" for="inputEmail">Introduction</label>Introduction
											 	<%= f.text_area :introduction, class:"form-control", placeholder:"introduction"%>
											 	<span class="fa fa-user form-control-icon" aria-hidden="true"></span>
											 <%= f.submit "Update User", class:"btn btn-block btn-base-1 mt-20 " %>
											<% end %>
										</div>
					</div>
					<div class="col-xs-9">
					</div>
			</div>
	</div>
</div>
