<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/7baa7a4fdb.js" crossorigin="anonymous">
    </script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
  <nav class="navbar navbar-inverse nav-expand-lg">
    <div class="container">
      <span>Bookers</span>
      <style>
        .navbar{
          border-radius: 0px;
          margin-bottom: 0px;
        }
        span{
          color: white;
          font-size: 20px;
        }
      </style>
  <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">

    <% if user_signed_in? %>
     <li class="nav-item">
      <%= link_to ' Home', user_path(current_user.id), class: "glyphicon glyphicon-home home" %>
     </li>
     <li class="nav-item">
      <%= link_to ' Users', users_path, class: "glyphicon glyphicon-user users" %>
     </li>
     <li class="nav-item">
      <%= link_to " Books", books_path, class: "glyphicon glyphicon-book books" %>
     </li>
     <li class="nav-item">
      <%= link_to " logout", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out logout" %>
     </li>
    <% else %>
     <li class="nav-item">
      <a class="glyphicon glyphicon-home home" href="/"> Home</a>
     </li>
     <li class="nav-item">
      <a class="glyphicon glyphicon-link about" href="/users/about"> About</a>
     </li>
     <li class="nav-item">
      <a class="glyphicon glyphicon-edit sign_up" href="/users/sign_up"> sign up</a>
     </li>
     <li class="nav-item">
      <a class="glyphicon glyphicon-log-in sign_in" href="/users/sign_in"> login</a>
     </li>
    <% end %>
  </ul>
</div>
</div>
</nav>
 <%= yield %>
 <footer>
   <div class="container">
    <div class="row">
      <div class="col-xs-3 col-xs-offset-9">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
   </div>
 </footer>
</body>
</html>
