<div class="post">
	</div><%= render 'books/display', new_book: @new_book %>
	<div class="col-xs-9">
		<h2>Book detail</h2>
		<table class="table">
			<tbody><tr>
				<td><%= link_to user_path(@book.user) do %><%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image.png", size:'50x50', class: "img-rounded pull-left profile-thumb" %>
					<%= @book.user.name %>
					<% end %>
                </td>
				<td><%= link_to book_path(@book) do %><%= @book.title %><% end %></td>
				<td><%= @book.body %></td>
			</table>
	</div>
	　<% if @book.user == current_user %>
		<%= link_to "Destroy", book_path(@book), method: :delete %>
		<%= link_to "Edit", edit_book_path(@book) %>
	　<% end %>