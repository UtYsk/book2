<div class="container">
	<div calss="row">
		<div class="col-md-6 col-md-offset-3">
		<h1>Editing Book</h1>
		<%= render 'layouts/notifications' %>
			<%= form_for(@book) do |f| %>
				<div class="field row">
					Title
				<%= f.text_field :title %>
				</div>
				<div class="field row">
				Opinion
				<%= f.text_area :body %>
				</div>
				<%= f.submit "Update Book", class:"btn btn-primary col-xs-12" %>
				
			<% end %>
			<%= link_to "Show", book_path(@book) %>
			<%= link_to "Back", books_path %>
		</div>
	</div>
</div>

